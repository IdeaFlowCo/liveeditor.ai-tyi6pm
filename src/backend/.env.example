FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# Server Configuration
APP_HOST=0.0.0.0
APP_PORT=5000

# MongoDB Database Configuration
MONGODB_URI=mongodb://username:password@localhost:27017/ai_writing_enhancement
MONGODB_DATABASE=ai_writing_enhancement

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AWS S3 Configuration for Document Storage
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-document-bucket

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_ORGANIZATION=your-organization-id

# JWT Authentication Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=604800

# Rate Limiting Configuration
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_ANONYMOUS=10
RATE_LIMIT_AI_SUGGESTIONS=50

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Email Configuration for Notifications
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Logging Configuration
LOG_LEVEL=INFO

# Session Configuration
SESSION_TYPE=redis
SESSION_PERMANENT=False
SESSION_USE_SIGNER=True
SESSION_KEY_PREFIX=ai_writing_session:

# Feature Flags
ENABLE_ANONYMOUS_USAGE=True
ENABLE_DOCUMENT_VERSIONING=True
ENABLE_AI_STREAMING=False

# Auth0 Configuration (Optional)
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_API_AUDIENCE=your-api-identifier
AUTH0_ALGORITHMS=RS256
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret